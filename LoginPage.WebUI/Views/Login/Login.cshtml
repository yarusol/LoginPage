@{
	Layout = "~/Views/Shared/Layout.cshtml";
    ViewBag.Title = "Автентифікація";
	string message = ViewBag.Message;
}
@section pageStyleSheets
{
	<link rel="stylesheet" href="~/css/login-form.css" />
}
@section pageScripts
{

}

<form role="form" id="login-form" method="post">
	<p>Log in</p>
	<div class="form-group" >
		<label class="sr-only" for="username">Enter user name</label>
		<input type="text" class="form-control" id="username" name="username" placeholder="Enter user name" />
	</div>
	<div class="form-group">
		<label class="sr-only" for="password">Enter password</label>
		<input type="password" class="form-control" id="password" name="password" placeholder="Enter password" />
	</div>
	<input type="submit" class="btn bnt-default" value="Log in" />
	<p id="message">@message</p>
</form>

