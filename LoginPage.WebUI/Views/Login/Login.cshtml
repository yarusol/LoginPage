@model LoginPage.WebUI.Models.UserCredentials
@{
	Layout = "~/Views/Shared/Layout.cshtml";
	ViewBag.Title = "Автентифікація";
	string message = ViewBag.Message;
}
@section pageStyleSheets
{
	<link rel="stylesheet" href="~/css/login-form.css" />
}
@section pageScripts
{

}

@using ( Html.BeginForm( "Login", "Login", FormMethod.Post,
		new { role = "form", id = "login-form", method = "post" } 
	))
{
	<p>Log in</p>
	<div class="form-group">
		<label class="sr-only" for="UserName">Enter user name</label>
		@Html.TextBoxFor( 
			m => m.UserName,
			new { @class = "form-control", placeholder = "Enter user name" }
		)
	</div>
	<div class="form-group">
		<label class="sr-only" for="Password">Enter password</label>
		@Html.PasswordFor( 
			m => m.Password,
			new { @class = "form-control", name = "UserCredentials.Password", placeholder = "Enter password" }
		)
	</div>
	<input type="submit" class="btn bnt-default" value="Log in" />
	<p id="message">@message</p>
}
